    "start-debug": "nwjs ./ --enable-logging=stderr --enable-devtools=1",
    "build": "nwbuild --version=\"0.19.5\" --buildDir=\"./builds\" --platforms=\"osx64\" --macIcns=\"./assets/osx/app.icns\" --flavor=\"normal\" ./"
  }
