  },
  "license" : "BSD-3-Clause",
  "main": "src/index.html",
  "window": {
    "width": 500,
    "min_width": 500,
    "min_height": 400
  },
  "platformOverrides": {
    "osx64": {
      "name": "Time Keeper"
    }
