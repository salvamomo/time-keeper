{
  "name": "time-keeper",
  "description": "A simple Time Tracker on its path to glory!",
  "version": "1.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/salvamomo/time-keeper.git"
  },
  "license": "BSD-3-Clause",
  "main": "src/index.html",
  "window": {
    "width": 500,
    "min_width": 500,
    "min_height": 400
  },
  "platformOverrides": {
    "osx64": {
      "name": "Time Keeper"
    },
    "linux64": {
      "name": "Time Keeper"
    }
  },
  "scripts": {
    "dist": "build --tasks mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --enable-logging=stderr --mirror https://dl.nwjs.io/ .",
    "dev": "nwjs ./ --user-data-dir='./data' --enable-logging=stderr",
    "dev-debug": "nwjs ./ --user-data-dir='./data' --enable-logging=stderr --enable-devtools=1"
  },
  "build": {
    "nwVersion": "0.33.3",
    "output": "build",
    "nwFlavor": "normal",
    "excludes": [
      "**/node_modules",
      "**/node_modules/**/*"
    ],
    "mac": {
      "name": "Time Keeper",
      "displayName": "Time Keeper",
      "icon": "./assets/osx/app.icns"
    }
  },
  "devDependencies": {
    "gulp": "^4.0.0",
    "gulp-jshint": "^2.0.4",
    "gulp-replace": "^0.5.4",
    "jshint": "^2.9.6",
    "jshint-stylish": "^2.2.1",
    "nwjs-builder-phoenix": "^1.14.8"
  }
}
